<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_category_settings"
    style="@style/Layout"
    tools:context="pl.wojciech.smol.jakatomelodia.CategorySettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/logo"
        style="@style/Logo"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/set_category_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                style="@style/TextTitle.SetCategory"
                />

            <LinearLayout
                android:id="@+id/linear_layout_pop_category"
                android:layout_below="@id/set_category_text"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="POP:"
                    android:textColor="@color/textColor"
                    android:textStyle="bold"

                    android:textSize="32sp"/>

            <ToggleButton
                android:id="@+id/toggle_button_pop_category"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_layout_rock_category"
                android:padding="20dp"
                android:layout_below="@id/linear_layout_pop_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="ROCK:"
                    android:textColor="@color/textColor"
                    android:textStyle="bold"

                    android:textSize="32sp"/>

                <ToggleButton
                    android:id="@+id/toggle_button_rock_category"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_layout_seventies_and_eighties_category"
                android:padding="20dp"
                android:layout_below="@id/linear_layout_rock_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="70s &#38; 80s:"
                    android:textColor="@color/textColor"
                    android:textStyle="bold"

                    android:textSize="32sp"/>

                <ToggleButton
                    android:id="@+id/toggle_button_seventies_and_eighties_category"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>