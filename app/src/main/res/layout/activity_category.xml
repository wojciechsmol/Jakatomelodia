<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_category"
    style="@style/Layout"
    tools:context="pl.wojciech.smol.jakatomelodia.CategoryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            style="@style/Logo"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/category_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                style="@style/TextTitle.Category"
                />

            <!--FrameLayout for touch Effect-->
            <FrameLayout
                android:id="@+id/frame_button_category_pop"
                style="@style/ButtonWrapper.Category"
                android:layout_marginTop="20dp"
                android:layout_below="@id/category_text">
                <Button
                    android:id="@+id/button_category_pop"
                    style="@style/Button.Orange"
                    android:shadowRadius="5"
                    android:text="@string/pop" />
            </FrameLayout>

            <!--FrameLayout for touch Effect-->
            <FrameLayout
                style="@style/ButtonWrapper.Category"
                android:id="@+id/frame_button_category_rock"
                android:layout_marginTop="20dp"
                android:layout_below="@id/frame_button_category_pop"
                android:layout_centerVertical="true">
                <Button
                    android:id="@+id/button_category_rock"
                    style="@style/Button.Orange"
                    android:shadowRadius="5"
                    android:text="@string/rock" />
            </FrameLayout>

            <!--FrameLayout for touch Effect-->
            <FrameLayout
                style="@style/ButtonWrapper.Category"
                android:layout_marginTop="20dp"
                android:layout_below="@id/frame_button_category_rock">
                <Button
                    android:id="@+id/button_category_seventiesandeighties"
                    style="@style/Button.Orange"
                    android:shadowRadius="5"
                    android:text="@string/seventiesandeighties" />
            </FrameLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>



